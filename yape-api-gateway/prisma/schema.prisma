generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id                              Int             @id @default(autoincrement())
  accountExternalIdDebit          String          @default(uuid())
  accountExternalIdCredit         String          @default(uuid())
  status                          Int
  transferTypeId                  Int
  value                           Float
  createdAt                       DateTime        @default(now())
  updatedAt                       DateTime        @default(now())
}